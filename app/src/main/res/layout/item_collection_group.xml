<?xml version="1.0" encoding="utf-8"?>
<com.balysv.materialripple.MaterialRippleLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/waterfall_bgcolor"
    app:mrl_rippleOverlay="true"
    app:mrl_rippleColor="@color/black"
    app:mrl_rippleAlpha="0.1"
    app:mrl_rippleDimension="10dp"
    app:mrl_rippleDuration="250"
    app:mrl_rippleFadeDuration="75"
    app:mrl_rippleHover="true"
    app:mrl_rippleDelayClick="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_site_height"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/item_site_icon_size"
            android:layout_height="@dimen/item_site_icon_size"
            android:layout_marginTop="@dimen/half_padding"
            android:layout_marginBottom="@dimen/half_padding"
            android:layout_marginLeft="@dimen/uni_padding"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:scaleType="centerInside"
            tools:src="@drawable/ic_group_black" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/half_padding"
            android:layout_marginBottom="@dimen/half_padding"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:textSize="@dimen/item_site_text_size"
            tools:text="未分类" />
        <ml.puredark.hviewer.libraries.advrecyclerview.common.widget.ExpandableItemIndicator
            android:id="@+id/indicator"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="16dp"/>
    </LinearLayout>

</com.balysv.materialripple.MaterialRippleLayout>
